---
/**
 * Badge â€” Clean status badge, replaces emoji-prefixed labels
 * Usage: <Badge variant="success">LIVE</Badge>
 */
export interface Props {
  variant: 'success' | 'warning' | 'error' | 'info' | 'progress' | 'neutral';
  size?: 'sm' | 'md';
}

const { variant, size = 'sm' } = Astro.props;

const variantClasses = {
  success: 'bg-green-500/10 text-green-400 border-green-500/30',
  warning: 'bg-amber-500/10 text-amber-400 border-amber-500/30',
  error: 'bg-red-500/10 text-red-400 border-red-500/30',
  info: 'bg-blue-500/10 text-blue-400 border-blue-500/30',
  progress: 'bg-purple-500/10 text-purple-400 border-purple-500/30',
  neutral: 'bg-slate-500/10 text-slate-400 border-slate-500/30'
};

const sizeClasses = {
  sm: 'px-2 py-0.5 text-xs',
  md: 'px-2.5 py-1 text-sm'
};
---

<span 
  class:list={[
    'inline-flex items-center font-medium rounded border uppercase tracking-wide',
    variantClasses[variant],
    sizeClasses[size]
  ]}
>
  <slot />
</span>
