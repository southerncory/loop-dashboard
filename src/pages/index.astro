          </div>
        </section>

        <!-- Decisions Tab -->
        <section id="tab-decisions" class="tab-panel hidden">
          <div class="mb-6">
            <p class="text-slate-400">Architectural decisions and their rationale. Reference this before making changes.</p>
          </div>

          <div class="space-y-4">
            {decisions.map((dec) => (
              <div class="bg-slate-800 border border-slate-700 rounded-xl overflow-hidden">
                <div class="p-4 flex items-start gap-4">
                  <div class={`px-2 py-1 text-xs font-mono rounded ${
                    dec.category === 'platform' ? 'bg-purple-500/20 text-purple-400' :
                    dec.category === 'auth' ? 'bg-green-500/20 text-green-400' :
