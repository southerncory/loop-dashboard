---
import DashboardLayout from '../layouts/DashboardLayout.astro';
---

<DashboardLayout title="Treasury Dashboard | Loop Command Center" active="treasury">
  <div class="p-6">
    <header class="mb-8">
      <h1 class="text-3xl font-bold">üí∞ Treasury Dashboard</h1>
      <p class="text-slate-400 mt-1">Live balances, APY rates, and yield tracking</p>
    </header>

    <div id="loading" class="text-center py-20">
      <div class="text-4xl mb-4 animate-pulse">üí∞</div>
      <p class="text-slate-400">Loading treasury data...</p>
    </div>

    <div id="content" class="hidden">
      <!-- Balance Cards -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <div class="bg-slate-800 rounded-xl p-5 border border-slate-700">
          <div class="text-slate-400 text-sm mb-1">Total Treasury Value</div>
          <div id="stat-total" class="text-3xl font-bold text-white">$0</div>
        </div>
        <div class="bg-slate-800 rounded-xl p-5 border border-slate-700">
          <div class="text-slate-400 text-sm mb-1">Staked Balance</div>
          <div id="stat-staked" class="text-3xl font-bold text-purple-400">$0</div>
        </div>
        <div class="bg-slate-800 rounded-xl p-5 border border-slate-700">
          <div class="text-slate-400 text-sm mb-1">Blended APY</div>
          <div id="stat-apy" class="text-3xl font-bold text-yellow-400">--%</div>
        </div>
        <div class="bg-slate-800 rounded-xl p-5 border border-slate-700">
          <div class="text-slate-400 text-sm mb-1">Total Yield Earned</div>
          <div id="stat-yield" class="text-3xl font-bold text-green-400">$0</div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <!-- Live APY Rates -->
        <div class="bg-slate-800 rounded-xl border border-slate-700">
          <div class="px-5 py-4 border-b border-slate-700">
            <h2 class="font-semibold">üìà Live APY Rates</h2>
          </div>
          <div class="p-5 space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-slate-300">Marinade</span>
              <span id="apy-marinade" class="font-bold text-blue-400">--%</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-slate-300">Jito</span>
              <span id="apy-jito" class="font-bold text-yellow-400">--%</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-slate-300">Kamino</span>
              <span id="apy-kamino" class="font-bold text-green-400">--%</span>
            </div>
          </div>
        </div>

        <!-- Merchant Summary -->
        <div class="bg-slate-800 rounded-xl border border-slate-700">
          <div class="px-5 py-4 border-b border-slate-700">
            <h2 class="font-semibold">üè™ Merchant Pools</h2>
          </div>
          <div class="p-5 space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-slate-300">Active Merchants</span>
              <span id="merchant-count" class="font-bold">0</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-slate-300">Total Deposits</span>
              <span id="merchant-deposits" class="font-bold text-blue-400">$0</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-slate-300">Accrued Yield</span>
              <span id="merchant-yield" class="font-bold text-green-400">$0</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Squads Vault -->
      <div class="bg-slate-800 rounded-xl border border-slate-700 mb-6">
        <div class="px-5 py-4 border-b border-slate-700">
          <h2 class="font-semibold">üîê Squads Multi-Sig Vault</h2>
        </div>
        <div class="p-5">
          <div class="flex items-center justify-between mb-4">
            <span class="text-slate-400">Vault Address</span>
            <a id="vault-link" href="#" target="_blank" class="font-mono text-sm text-emerald-400 hover:text-emerald-300">
              <span id="vault-address">Loading...</span> ‚Üó
            </a>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <div class="text-slate-400 text-sm">SOL Balance</div>
              <div id="vault-sol" class="font-bold">-- SOL</div>
            </div>
            <div>
              <div class="text-slate-400 text-sm">USDC Balance</div>
              <div id="vault-usdc" class="font-bold">-- USDC</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Manual Staking Trigger -->
      <div class="bg-slate-800 rounded-xl border border-slate-700 mb-6">
        <div class="px-5 py-4 border-b border-slate-700">
          <h2 class="font-semibold">üéØ Manual Staking Actions</h2>
        </div>
        <div class="p-5">
          <div id="staking-form" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <label class="block text-sm text-slate-400 mb-1">Action Type</label>
                <select id="staking-action" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white">
                  <option value="stake">Stake USDC</option>
                  <option value="unstake">Unstake</option>
                  <option value="record_deposit">Record Deposit Received</option>
                </select>
              </div>
              <div>
                <label class="block text-sm text-slate-400 mb-1">Amount (USD)</label>
                <input type="number" id="staking-amount" placeholder="10000" step="0.01" 
                  class="w-full bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white placeholder-slate-500">
              </div>
              <div>
                <label class="block text-sm text-slate-400 mb-1">Protocol</label>
                <select id="staking-protocol" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white">
                  <option value="marinade">Marinade (~7.5% APY)</option>
                  <option value="jito">Jito (~7.8% APY)</option>
                  <option value="kamino">Kamino (~12% APY)</option>
                  <option value="liquid">Keep Liquid (USDC)</option>
                </select>
              </div>
            </div>
            <div>
              <label class="block text-sm text-slate-400 mb-1">Notes (optional)</label>
              <input type="text" id="staking-notes" placeholder="e.g., Initial merchant deposit from Newslink" 
                class="w-full bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white placeholder-slate-500">
            </div>
            <div class="flex items-center gap-4">
              <button id="staking-submit" class="bg-purple-600 hover:bg-purple-700 text-white font-medium px-6 py-2 rounded-lg transition">
                Execute Action
              </button>
              <span id="staking-status" class="text-sm text-slate-400"></span>
            </div>
          </div>
          
          <!-- Recent Actions Log -->
          <div class="mt-6 pt-4 border-t border-slate-700">
            <h3 class="text-sm font-medium text-slate-400 mb-3">Recent Treasury Actions</h3>
            <div id="treasury-actions" class="space-y-2 text-sm">
              <div class="text-slate-500 italic">Loading recent actions...</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Treasury Breakdown -->
      <div class="bg-slate-800 rounded-xl border border-slate-700">
        <div class="px-5 py-4 border-b border-slate-700">
          <h2 class="font-semibold">üìä Allocation</h2>
        </div>
        <div class="p-5">
          <div class="grid grid-cols-3 gap-4 mb-4">
            <div class="text-center">
              <div id="alloc-usd" class="text-2xl font-bold text-green-400">$0</div>
              <div class="text-xs text-slate-400 mt-1">USD (Bank)</div>
            </div>
            <div class="text-center">
              <div id="alloc-usdc" class="text-2xl font-bold text-blue-400">$0</div>
              <div class="text-xs text-slate-400 mt-1">USDC (Liquid)</div>
            </div>
            <div class="text-center">
              <div id="alloc-staked" class="text-2xl font-bold text-purple-400">$0</div>
              <div class="text-xs text-slate-400 mt-1">Staked</div>
            </div>
          </div>
          <div class="h-4 bg-slate-700 rounded-full overflow-hidden flex">
            <div id="bar-usd" class="bg-green-500 h-full" style="width: 0%"></div>
            <div id="bar-usdc" class="bg-blue-500 h-full" style="width: 0%"></div>
            <div id="bar-staked" class="bg-purple-500 h-full" style="width: 0%"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const SUPABASE_URL = 'https://ibhjsutgxhujbjhrilwx.supabase.co';
    const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImliaGpzdXRneGh1amJqaHJpbHd4Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjkzNzkzODgsImV4cCI6MjA4NDk1NTM4OH0.5BWyde9ozVjf9KV-se6o0g6zf2MBWlUWU6pN98KaOO4';

    function fmt(n: number) {
      return n >= 1000000 ? '$' + (n/1000000).toFixed(2) + 'M' : n >= 1000 ? '$' + (n/1000).toFixed(1) + 'K' : '$' + n.toFixed(0);
    }

    function pct(n: number) {
      return (n * 100).toFixed(2) + '%';
    }

    async function load() {
      try {
        const res = await fetch(`${SUPABASE_URL}/functions/v1/treasury-status`, {
          headers: { 'Authorization': `Bearer ${SUPABASE_ANON_KEY}` },
        });
        const data = await res.json();

        const { treasury, merchantSummary, onChainBalance, liveApyRates, squadsVault } = data;

        // Main stats
        document.getElementById('stat-total')!.textContent = fmt(treasury.totalValue);
        document.getElementById('stat-staked')!.textContent = fmt(treasury.current_staked_balance || 0);
        document.getElementById('stat-yield')!.textContent = fmt(treasury.total_yield_earned || 0);

        // APY rates
        if (liveApyRates) {
          document.getElementById('apy-marinade')!.textContent = liveApyRates.marinade ? pct(liveApyRates.marinade) : '--';
          document.getElementById('apy-jito')!.textContent = liveApyRates.jito ? pct(liveApyRates.jito) : '--';
          document.getElementById('apy-kamino')!.textContent = liveApyRates.kamino ? pct(liveApyRates.kamino) : '--';

          // Blended APY (average for now)
          const rates = [liveApyRates.marinade, liveApyRates.jito, liveApyRates.kamino].filter(r => r);
          const blended = rates.length > 0 ? rates.reduce((a, b) => a + b, 0) / rates.length : 0;
          document.getElementById('stat-apy')!.textContent = pct(blended);
        }

        // Merchant summary
        document.getElementById('merchant-count')!.textContent = merchantSummary.activeMerchants || '0';
        document.getElementById('merchant-deposits')!.textContent = fmt(merchantSummary.totalDeposits || 0);
        document.getElementById('merchant-yield')!.textContent = fmt(merchantSummary.totalAccruedYield || 0);

        // Vault
        document.getElementById('vault-address')!.textContent = squadsVault.slice(0, 8) + '...' + squadsVault.slice(-8);
        document.getElementById('vault-link')!.href = `https://solscan.io/account/${squadsVault}`;
        if (onChainBalance) {
          document.getElementById('vault-sol')!.textContent = onChainBalance.sol.toFixed(4) + ' SOL';
        }
        document.getElementById('vault-usdc')!.textContent = (treasury.current_usdc_balance || 0).toFixed(2) + ' USDC';

        // Allocation
        const usd = treasury.current_usd_balance || 0;
        const usdc = treasury.current_usdc_balance || 0;
        const staked = treasury.current_staked_balance || 0;
        const total = treasury.totalValue || 1;

        document.getElementById('alloc-usd')!.textContent = fmt(usd);
        document.getElementById('alloc-usdc')!.textContent = fmt(usdc);
        document.getElementById('alloc-staked')!.textContent = fmt(staked);

        document.getElementById('bar-usd')!.style.width = `${(usd / total) * 100}%`;
        document.getElementById('bar-usdc')!.style.width = `${(usdc / total) * 100}%`;
        document.getElementById('bar-staked')!.style.width = `${(staked / total) * 100}%`;

        document.getElementById('loading')!.classList.add('hidden');
        document.getElementById('content')!.classList.remove('hidden');
      } catch (e) {
        console.error(e);
        document.getElementById('loading')!.innerHTML = '<div class="text-red-400">Failed to load treasury data</div>';
      }
    }

    load();

    // Manual Staking Form Handler
    async function submitStakingAction() {
      const action = (document.getElementById('staking-action') as HTMLSelectElement).value;
      const amount = parseFloat((document.getElementById('staking-amount') as HTMLInputElement).value);
      const protocol = (document.getElementById('staking-protocol') as HTMLSelectElement).value;
      const notes = (document.getElementById('staking-notes') as HTMLInputElement).value;
      const statusEl = document.getElementById('staking-status')!;
      const submitBtn = document.getElementById('staking-submit') as HTMLButtonElement;

      if (!amount || amount <= 0) {
        statusEl.textContent = '‚ùå Please enter a valid amount';
        statusEl.className = 'text-sm text-red-400';
        return;
      }

      submitBtn.disabled = true;
      statusEl.textContent = '‚è≥ Processing...';
      statusEl.className = 'text-sm text-yellow-400';

      try {
        const res = await fetch(`${SUPABASE_URL}/functions/v1/treasury-action`, {
          method: 'POST',
          headers: { 
            'Authorization': `Bearer ${SUPABASE_ANON_KEY}`,
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ action, amount, protocol, notes })
        });

        const data = await res.json();

        if (res.ok && data.success) {
          statusEl.textContent = '‚úÖ ' + data.message;
          statusEl.className = 'text-sm text-green-400';
          // Clear form
          (document.getElementById('staking-amount') as HTMLInputElement).value = '';
          (document.getElementById('staking-notes') as HTMLInputElement).value = '';
          // Reload data
          setTimeout(() => { load(); loadTreasuryActions(); }, 1000);
        } else {
          statusEl.textContent = '‚ùå ' + (data.error || 'Action failed');
          statusEl.className = 'text-sm text-red-400';
        }
      } catch (e) {
        statusEl.textContent = '‚ùå Network error';
        statusEl.className = 'text-sm text-red-400';
      } finally {
        submitBtn.disabled = false;
      }
    }

    async function loadTreasuryActions() {
      const actionsEl = document.getElementById('treasury-actions')!;
      try {
        const res = await fetch(`${SUPABASE_URL}/rest/v1/treasury_transactions?order=created_at.desc&limit=5`, {
          headers: { 
            'apikey': SUPABASE_ANON_KEY,
            'Authorization': `Bearer ${SUPABASE_ANON_KEY}`
          }
        });
        const actions = await res.json();
        
        if (actions.length === 0) {
          actionsEl.innerHTML = '<div class="text-slate-500 italic">No treasury actions recorded yet</div>';
          return;
        }

        actionsEl.innerHTML = actions.map((a: any) => {
          const date = new Date(a.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' });
          const icon = a.transaction_type === 'stake' ? 'üìà' : a.transaction_type === 'unstake' ? 'üìâ' : 'üí∞';
          return `<div class="flex items-center justify-between py-2 border-b border-slate-700/50">
            <span>${icon} <span class="text-slate-300">${a.transaction_type}</span> <span class="text-slate-500">‚Üí ${a.protocol || 'treasury'}</span></span>
            <span class="font-mono ${a.amount > 0 ? 'text-green-400' : 'text-red-400'}">${a.amount > 0 ? '+' : ''}$${Math.abs(a.amount).toLocaleString()}</span>
            <span class="text-slate-500 text-xs">${date}</span>
          </div>`;
        }).join('');
      } catch (e) {
        actionsEl.innerHTML = '<div class="text-slate-500 italic">Could not load actions</div>';
      }
    }

    document.getElementById('staking-submit')?.addEventListener('click', submitStakingAction);
    loadTreasuryActions();
  </script>
</DashboardLayout>
