---
import DashboardLayout from '../layouts/DashboardLayout.astro';
---

<DashboardLayout title="Treasury | Loop" active="treasury">
  <div class="min-h-screen bg-[#0f1419] p-4 md:p-6">
    <!-- Header -->
    <header class="mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-xl font-semibold text-slate-100">Treasury</h1>
          <p class="text-slate-500 text-sm mt-0.5">Live on-chain data</p>
        </div>
        <div class="flex items-center gap-3">
          <span id="last-update" class="text-xs text-slate-600 font-mono"></span>
          <button id="refresh-btn" class="px-3 py-1.5 bg-slate-800 hover:bg-slate-700 border border-slate-700/50 rounded text-sm text-slate-300 transition-colors">
            Refresh
          </button>
        </div>
      </div>
    </header>

    <div id="loading" class="text-center py-20">
      <div class="w-6 h-6 border-2 border-emerald-500/30 border-t-emerald-500 rounded-full animate-spin mx-auto mb-3"></div>
      <p class="text-slate-500 text-sm">Loading treasury data...</p>
    </div>

    <div id="error" class="hidden text-center py-20">
      <p class="text-red-400 text-sm" id="error-msg">Failed to load treasury data</p>
      <button onclick="loadLiveData()" class="mt-4 px-4 py-2 bg-slate-800 hover:bg-slate-700 border border-slate-700/50 rounded text-sm text-slate-300">
        Retry
      </button>
    </div>

    <div id="content" class="hidden space-y-4">
      <!-- Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
        <div class="bg-[#1a2028] border border-slate-700/50 rounded-lg p-3">
          <div class="text-xs font-medium text-slate-500 uppercase tracking-wide mb-1">Total Value</div>
          <div id="stat-total" class="text-xl font-semibold font-mono text-slate-100">$0</div>
          <div id="stat-total-sol" class="text-xs text-slate-600 font-mono mt-0.5"></div>
        </div>
        <div class="bg-[#1a2028] border border-slate-700/50 rounded-lg p-3">
          <div class="text-xs font-medium text-slate-500 uppercase tracking-wide mb-1">Staked</div>
          <div id="stat-staked" class="text-xl font-semibold font-mono text-purple-400">$0</div>
          <div class="text-xs text-slate-600 mt-0.5">Earning yield</div>
        </div>
        <div class="bg-[#1a2028] border border-slate-700/50 rounded-lg p-3">
          <div class="text-xs font-medium text-slate-500 uppercase tracking-wide mb-1">Blended APY</div>
          <div id="stat-apy" class="text-xl font-semibold font-mono text-amber-400">--%</div>
          <div id="stat-daily-yield" class="text-xs text-green-400 font-mono mt-0.5"></div>
        </div>
        <div class="bg-[#1a2028] border border-slate-700/50 rounded-lg p-3">
          <div class="text-xs font-medium text-slate-500 uppercase tracking-wide mb-1">Monthly Yield</div>
          <div id="stat-monthly" class="text-xl font-semibold font-mono text-green-400">$0</div>
          <div class="text-xs text-slate-600 mt-0.5">At current rate</div>
        </div>
      </div>

      <!-- Positions -->
      <div class="bg-[#1a2028] border border-slate-700/50 rounded-lg">
        <div class="p-3 border-b border-slate-700/50 flex items-center justify-between">
          <h2 class="text-sm font-medium text-slate-200">Live Positions</h2>
          <span class="text-xs text-slate-500 font-mono">SOL: $<span id="sol-price">--</span></span>
        </div>
        <div class="p-4">
          <div id="positions-list" class="space-y-3"></div>
        </div>
      </div>

      <!-- Vault Info -->
      <div class="bg-[#1a2028] border border-slate-700/50 rounded-lg">
        <div class="p-3 border-b border-slate-700/50">
          <h2 class="text-sm font-medium text-slate-200">Multi-Sig Vault</h2>
        </div>
        <div class="p-4 space-y-3">
          <div class="flex items-center justify-between">
            <span class="text-xs text-slate-500 uppercase tracking-wide">Address</span>
            <a id="vault-link" href="#" target="_blank" class="font-mono text-xs text-emerald-400 hover:text-emerald-300">
              <span id="vault-address">Loading...</span>
            </a>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-xs text-slate-500 uppercase tracking-wide">Threshold</span>
            <span id="vault-threshold" class="font-mono text-xs text-slate-300">--</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-xs text-slate-500 uppercase tracking-wide">Network</span>
            <span class="text-xs text-slate-300">Solana Mainnet</span>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="bg-[#1a2028] border border-slate-700/50 rounded-lg">
        <div class="p-3 border-b border-slate-700/50">
          <h2 class="text-sm font-medium text-slate-200">Recent Activity</h2>
        </div>
        <div id="activity-list" class="divide-y divide-slate-700/30 max-h-64 overflow-y-auto">
          <div class="p-4 text-center text-slate-600 text-sm">No recent activity</div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const VAULT_ADDRESS = 'MmFaoYbgrFG1H6JoC99xGSnzT7hGH143kV2ZEyc5on4';
    const HELIUS_KEY = 'aec5751f-1897-4f5c-8ed2-cfb0720ec4ab';
    
    async function fetchSolPrice() {
      try {
        const res = await fetch('https://api.coingecko.com/api/v3/simple/price?ids=solana&vs_currencies=usd');
        const data = await res.json();
        return data.solana?.usd || 140;
      } catch {
        return 140;
      }
    }

    async function fetchVaultData() {
      const url = `https://mainnet.helius-rpc.com/?api-key=${HELIUS_KEY}`;
      
      const balanceRes = await fetch(url, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          jsonrpc: '2.0',
          id: 1,
          method: 'getBalance',
          params: [VAULT_ADDRESS]
        })
      });
      
      const balanceData = await balanceRes.json();
      const solBalance = (balanceData.result?.value || 0) / 1e9;
      
      const tokensRes = await fetch(url, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          jsonrpc: '2.0',
          id: 2,
          method: 'getTokenAccountsByOwner',
          params: [VAULT_ADDRESS, { programId: 'TokenkegQfeZyiNwAJbNbGKPFXCWuBvf9Ss623VQ5DA' }, { encoding: 'jsonParsed' }]
        })
      });
      
      const tokensData = await tokensRes.json();
      
      return { solBalance, tokens: tokensData.result?.value || [] };
    }

    async function loadLiveData() {
      const loading = document.getElementById('loading');
      const error = document.getElementById('error');
      const content = document.getElementById('content');
      
      loading.classList.remove('hidden');
      error.classList.add('hidden');
      content.classList.add('hidden');
      
      try {
        const [solPrice, vaultData] = await Promise.all([
          fetchSolPrice(),
          fetchVaultData()
        ]);
        
        document.getElementById('sol-price').textContent = solPrice.toFixed(2);
        
        const solValue = vaultData.solBalance * solPrice;
        let totalValue = solValue;
        
        // Process tokens
        const positions = [{
          name: 'SOL',
          amount: vaultData.solBalance.toFixed(4),
          value: solValue,
          apy: 0
        }];
        
        // TODO: Add staked positions from token accounts
        
        document.getElementById('stat-total').textContent = `$${totalValue.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`;
        document.getElementById('stat-total-sol').textContent = `${vaultData.solBalance.toFixed(4)} SOL`;
        
        // Render positions
        const positionsList = document.getElementById('positions-list');
        if (positions.length === 0) {
          positionsList.innerHTML = '<div class="text-slate-600 text-sm">No positions found</div>';
        } else {
          positionsList.innerHTML = positions.map(p => `
            <div class="flex items-center justify-between bg-slate-800/30 rounded p-3">
              <div>
                <div class="font-medium text-slate-200">${p.name}</div>
                <div class="text-xs text-slate-500 font-mono">${p.amount}</div>
              </div>
              <div class="text-right">
                <div class="font-mono text-slate-200">$${p.value.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })}</div>
                ${p.apy > 0 ? `<div class="text-xs text-green-400 font-mono">${p.apy}% APY</div>` : ''}
              </div>
            </div>
          `).join('');
        }
        
        // Vault info
        document.getElementById('vault-address').textContent = VAULT_ADDRESS.slice(0, 8) + '...' + VAULT_ADDRESS.slice(-6);
        document.getElementById('vault-link').href = `https://solscan.io/account/${VAULT_ADDRESS}`;
        document.getElementById('vault-threshold').textContent = '1/1';
        
        // Update timestamp
        document.getElementById('last-update').textContent = new Date().toLocaleTimeString();
        
        loading.classList.add('hidden');
        content.classList.remove('hidden');
        
      } catch (err) {
        console.error('Failed to load treasury:', err);
        loading.classList.add('hidden');
        document.getElementById('error-msg').textContent = err.message;
        error.classList.remove('hidden');
      }
    }

    document.getElementById('refresh-btn').addEventListener('click', loadLiveData);
    
    loadLiveData();
    setInterval(loadLiveData, 30000);
  </script>
</DashboardLayout>
