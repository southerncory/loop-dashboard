      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      <div class="card p-4">
        <div class="text-sm text-gray-500">Total Signups</div>
        <div class="text-2xl font-bold text-forest-600" id="total-count">-</div>
      </div>
      <div class="card p-4">
        <div class="text-sm text-gray-500">This Week</div>
        <div class="text-2xl font-bold text-gold-600" id="week-count">-</div>
      </div>
      <div class="card p-4">
        <div class="text-sm text-gray-500">Today</div>
        <div class="text-2xl font-bold text-blue-600" id="today-count">-</div>
      </div>
    </div>

    <!-- Loading State -->
    <div id="loading" class="card p-8 text-center">
      <div class="animate-spin w-8 h-8 border-4 border-forest-200 border-t-forest-600 rounded-full mx-auto mb-4"></div>
      <p class="text-gray-500">Loading waitlist...</p>
    </div>

    <!-- Error State -->
    <div id="error" class="hidden card p-8 text-center bg-red-50 border-red-200">
      <p class="text-red-600 font-medium" id="error-message">Failed to load waitlist</p>
      <button id="retry-btn" class="btn-secondary mt-4">Try Again</button>
    </div>

    <!-- Table -->
    <div id="table-container" class="hidden card overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Signed Up</th>
            </tr>
          </thead>
          <tbody id="waitlist-body" class="bg-white divide-y divide-gray-200">
